        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/imperial_red</item>
        <item name="colorSecondaryVariant">@color/imperial_red</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- For the resting Spinner style -->
        <item name="android:spinnerItemStyle">
            @style/SpinnerTextViewItem
        </item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/prussian_blue</item>

        <!-- Customize your theme here. -->
    </style>

